<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/test_section_bg"
    tools:context="com.example.aminubishier.umyuquizapp.TakeTest">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/status_txt"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:text="3/2"

            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/question_text"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Questions goes here"
        android:layout_margin="10dp"
        />
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:background="#ff9f00"
            android:id="@+id/op1_txt"
            android:text="A"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#ff9f00"
            android:textStyle="bold"
            android:id="@+id/op2_txt"
            android:text="B"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="C"
            android:background="#ff9f00"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAlignment="center"
            android:id="@+id/op3_txt"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:background="#ff9f00"
            android:id="@+id/op4_txt"
            android:text="D"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
