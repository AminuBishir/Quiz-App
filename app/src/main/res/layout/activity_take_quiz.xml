<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_section_bg"
    android:orientation="vertical"
    tools:context="com.example.aminubishier.umyuquizapp.TakeQuiz">

    <TextView
        android:id="@+id/display_status_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:textColor="#ffffff"
        android:text="TextView" />

    <TextView
        android:id="@+id/display_question_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        android:text="Questions go here" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGrp">


        <RadioButton
            android:id="@+id/display_option1_rd"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
          android:button="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
            android:drawableStart="?android:attr/listChoiceIndicatorSingle"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Option 1 goes here" />

        <RadioButton
            android:id="@+id/display_option2_rd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
            android:drawableStart="?android:attr/listChoiceIndicatorSingle"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/display_option3_rd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
            android:drawableStart="?android:attr/listChoiceIndicatorSingle"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/display_option4_rd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:orientation="vertical"
            android:drawableLeft="?android:attr/listChoiceIndicatorSingle"
            android:drawableStart="?android:attr/listChoiceIndicatorSingle"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="RadioButton" />
    </RadioGroup>

    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/next_button"
         />
</LinearLayout>
