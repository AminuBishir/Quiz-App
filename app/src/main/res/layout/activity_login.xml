<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/test_section_bg"
    tools:context="com.example.aminubishier.umyuquizapp.Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:srcCompat="@drawable/pad_and_key" />

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"

        android:textColor="#ffffff"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/name_txtb"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView"

        android:layout_marginTop="0dp"
        android:ems="11"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Enter your school email"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#ffff00" />

    <TextView
        android:id="@+id/password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_txt"
        android:layout_alignStart="@+id/name_txt"
        android:layout_below="@+id/name_txtb"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/student_name_txtb"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/name_txtb"

        android:layout_alignRight="@+id/name_txtb"
        android:layout_below="@+id/name_txtb"
        android:layout_marginTop="25dp"
        android:ems="11"
        android:hint="Enter a username"
        android:inputType="textPersonName"
        android:textColor="#ffffff"
        android:textColorHint="#ffff00" />

    <EditText
        android:id="@+id/password_txtb"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/student_name_txtb"

        android:layout_alignRight="@+id/student_name_txtb"
        android:layout_below="@+id/student_name_txtb"
        android:layout_marginTop="25dp"
        android:ems="11"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffff00" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/password_txtb"
        android:layout_alignRight="@+id/password_txtb"
        android:layout_below="@+id/password_txtb"
        android:layout_marginEnd="38dp"
        android:textStyle="bold"
        android:layout_marginRight="38dp"
        android:layout_marginTop="31dp"
        android:text="Log In" />

</RelativeLayout>
